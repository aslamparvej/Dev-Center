<%- include('../includes/head', {webTitle: 'Contact' }) %>
    <%- include('../includes/header') %>
        <main style="height: calc(100vh - 10rem); ">
            <div class="Contact-us-container main-container">
                <div class="form-container" style="width: 50%;">
                    <h2 class="auth-text">Contact Us</h2>
                    <form action="/contact" method="POST">
                        <div class="input-container">
                            <label for="name">Full Name</label>
                            <input type="text" name="name" id="name" required>
                        </div>
                        
                        <div class="input-container">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" required="" fdprocessedid="dtoflo">
                        </div>

                        <div class="input-container">
                            <label for="phone">Phone</label>
                            <input type="text" name="phone" id="phone">
                        </div>

                        <div class="input-container">
                            <label for="message">Message</label>
                            <textarea  name="message" rows="5" id="message" required></textarea>
                        </div>
                        
                        <div class="form-btn-container">
                            <button type="reset" class="custom-btn custom-reset-btn">Reset</button>
                            <button type="submit" class="custom-btn custom-submit-btn">Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include('../includes/footer') %>